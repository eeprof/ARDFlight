								   HorizontalAlignment="Center" />
						<TextBlock Text="{Binding CValueString}"
								   FontSize="12"
								   Grid.Column="2" />
					</Grid>
				</HierarchicalDataTemplate>
			</TreeView.ItemTemplate>
